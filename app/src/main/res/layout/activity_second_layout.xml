<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mriganga.booklistingapp.Second_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_author"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#616161"
            android:layout_below="@+id/second_title"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_category"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_below="@+id/second_author"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_language"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:layout_below="@+id/second_category"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_description"
            android:textSize="17sp"
            android:textColor="#212121"
            android:layout_below="@+id/second_language"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_preview"
            android:textSize="14sp"
            android:text="PREVIEW IN BROWSER"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/second_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_no_of_page"
            android:textSize="14sp"
            android:layout_below="@+id/second_preview"
            android:layout_marginBottom="2dp"
            android:textColor="#212121"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_publisher"
            android:textSize="14sp"
            android:layout_below="@+id/second_no_of_page"
            android:layout_marginBottom="2dp"
            android:textColor="#212121"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_publisher_date"
            android:textSize="14sp"
            android:layout_below="@+id/second_publisher"
            android:layout_marginBottom="5dp"
            android:textColor="#212121"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_preview_link"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="LINK"
            android:layout_below="@+id/second_description"
            android:layout_toRightOf="@+id/second_preview" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_publisher_date"
            android:id="@+id/second_rating"
            />

    </RelativeLayout>
</ScrollView>
